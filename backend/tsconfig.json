{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "types": ["node", "express", "nodemailer", "multer", "cors"],
    "noImplicitAny": false,
    "lib": ["ES2018", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 